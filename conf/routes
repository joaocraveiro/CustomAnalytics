# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                         controllers.Application.index()
GET         /auralytics/:auraName                     controllers.Application.auralytics(auraName: String)

GET         /newAura/:auraName                        controllers.Application.createAura(auraName: String)
GET         /newMetric/:aura/:metricName/:plotType    controllers.Application.createMetric(aura: String, metricName: String, plotType: String)
GET         /register/:aura/:metric/:name/:value      controllers.Application.createMetricEntry(aura: String, metric: String, name: String, value: Integer)
GET         /register/:aura/:metric/:value            controllers.Application.createUnnamedMetricEntry(aura: String, metric: String, value: Integer)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)
